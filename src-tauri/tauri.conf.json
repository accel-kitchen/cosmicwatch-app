{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CosmicWatchRecorder",
  "version": "0.3.0",
  "identifier": "com.nagi.cosmicwatch-recorder",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "CosmicWatch Recorder",
        "resizable": true,
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "additionalBrowserArgs": "--enable-features=WebSerial"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "publisher": "nagi",
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": "4CCD48FEF35EBB4AE9CE5FA25166D4D04A6EBE9F",
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/nagi-hobbies/cosmicwatch-app/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyRDgyQzRDOUVGOUVGRjIKUldUeTcvbWVUQ3pZOHBiSmVLRDJpWjlmTFBTMUFiWVRydXR2OG5ZU3JJcUdjbXpXNkxEeVc0VTgK"
    }
  }
}
